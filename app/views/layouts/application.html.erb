<!DOCTYPE html>
<html>
  <head>
    <title>AngularWebpack</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_pack_tag 'application'%>
  </head>

  <body class="container">
    <%if notice.present? %>
     <aside class="alert alert-info">
        <%= notice%>
     </aside>
    <%end%>
    <%if alert.present?%>
      <aside class="alert alert-danger">
      <%= alert%>
    </aside>
    <%end%>
    <%= yield %>
    <%= javascript_pack_tag 'application' %>
  </body>
</html>
